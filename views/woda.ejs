                });
        });

        function calculateWater() {
        const weight = document.getElementById('weight').value;
        if (!weight) {
            alert('Proszę wprowadzić wagę.');
            return;
        }
        
        fetch(`/calculateWaterIntake?weight=${weight}`)
            .then(response => response.json())
            .then(data => {
            if (data.error) {
                alert(data.error);
            } else {
                document.getElementById('result').innerText = `Zalecane dzienne spożycie wody: ${data.waterIntake} ml`;
            }
            })
            .catch(error => {
            console.error('Błąd:', error);
            alert('Wystąpił błąd podczas obliczania zapotrzebowania na wodę.');
            });
        }
