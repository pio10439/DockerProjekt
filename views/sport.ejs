        <div id="sport-info"></div>

        <script>
            var img = {
                'Pływanie': '/img/plywanie.gif',
                'Bieganie': '/img/bieganie.jpg',
                'Joga': '/img/joga.gif',
                'Zumba': '/img/zumba.jpeg',
                'Rower': '/img/rower.jpg',
                'Taniec': '/img/taniec.jpg',
                'Sporty Zespolowe': '/img/sporty.jpg'
            };

            function toggleLista() {
                var lista = document.querySelector('.lista');
                lista.classList.toggle('active');
            }

            function showInfo(sport) {
                var infoArea = document.getElementById('sport-info');
                var info = '';

                if (sport === 'Pływanie') {
                    info = 'Pływanie to doskonały sport, który angażuje wiele mięśni ciała jednocześnie. Regularne pływanie pomaga spalać kalorie, wzmacnia mięśnie, poprawia wydolność serca i płuc oraz kształtuje sylwetkę.';
                } else if (sport === 'Bieganie') {
                    info = 'Bieganie jest skutecznym sposobem na utratę zbędnych kilogramów i utrzymanie smukłej sylwetki. Regularne bieganie pozwala spalić wiele kalorii, poprawia wydolność serca i wzmacnia mięśnie nóg.';
                } else if (sport === 'Joga') {
                    info = 'Joga to nie tylko forma aktywności fizycznej, ale również praktyka mindfulness, która pomaga w redukcji stresu i poprawie samopoczucia. Ćwiczenia jogi angażują różne partie mięśniowe, wzmacniają ciało i poprawiają elastyczność.';
                } else if (sport === 'Zumba') {
                    info = 'Zumba to energetyczna forma ćwiczeń oparta na tańcu, która pozwala spalić wiele kalorii i poprawić kondycję. Tańce wykonywane podczas zajęć zumbowych angażują całe ciało, zapewniając efektywny trening aerobowy.';
                } else if (sport === 'Rower') {
                    info = 'Rower to doskonała forma aktywności fizycznej, która nie tylko pozwala na utrzymanie smukłej sylwetki, ale również wzmacnia mięśnie nóg i poprawia wydolność serca i płuc.';
                } else if (sport === 'Taniec') {
                    info = 'Taniec to nie tylko przyjemna forma spędzania czasu, ale również skuteczny sposób na utrzymanie smukłej sylwetki. Różne style tańca angażują różne partie mięśni, zapewniając kompleksowy trening fizyczny.';
                } else if (sport === 'Sporty Zespolowe') {
                    info = 'Gry takie jak piłka nożna, koszykówka czy siatkówka są świetnym sposobem na spalanie kalorii, poprawę kondycji i jednoczesne czerpanie radości z aktywności fizycznej.';
                }

                var imgSrc = img[sport] || '';
                infoArea.innerHTML = '<div class="sport-description"><h3>' + sport + '</h3><p>' + info + '</p><img id="sport-img" src="' + imgSrc + '" alt="Obrazek sportu"></div>';
            }

            document.getElementById('logout-button').addEventListener('click', function() {
                fetch('/logout', { method: 'POST' })
                    .then(response => response.text())
                    .then(data => {
                        console.log(data);
                        if (data === 'Proszę się zalogować przed wylogowaniem') {
                            alert('Proszę się zalogować przed wylogowaniem');
                        } else {
                            window.location.href = '/';
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Wystąpił błąd podczas wylogowywania');
                    });
            });
        </script>

